<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="279.0" prefWidth="422.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.integratedapplication.BaseConverterController">
    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Base Converter" />
    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="inputField" promptText="Enter value" />
        <ComboBox fx:id="fromUnit" promptText="From Unit" />
        <Label text="to" />
        <ComboBox fx:id="toUnit" promptText="To Unit" />
    </HBox>
    <Button onAction="#handleConvert" text="Convert" />
    <Label fx:id="resultLabel" style="-fx-font-size: 14; -fx-font-weight: bold;" />
</VBox>
