<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.integratedapplication.BinaryArithmeticController" spacing="20" alignment="CENTER" style="-fx-padding: 30;">
    <Label text="Binary Arithmetic operations" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
    <HBox spacing="20" alignment="CENTER">
        <TextField fx:id="textInput" promptText="Enter value" style="-fx-font-size: 16; -fx-pref-width: 150;"/>
        <ComboBox fx:id="comb1" promptText="From" style="-fx-font-size: 16; -fx-pref-width: 100;"/>
        <Label text="to" style="-fx-font-size: 16;"/>
        <ComboBox fx:id="comb2" promptText="To" style="-fx-font-size: 16; -fx-pref-width: 100;"/>
    </HBox>
    <Button text="Convert" onAction="#handleConvert" style="-fx-font-size: 16; -fx-pref-width: 100;"/>
    <HBox spacing="20" alignment="CENTER">
        <Label text="Result:" style="-fx-font-size: 16;"/>
        <TextField fx:id="textOutput" editable="false" style="-fx-font-size: 16; -fx-pref-width: 150;"/>
    </HBox>
</VBox>
